<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools">


    <android.support.v7.widget.CardView
        android:id="@+id/clasificados_card"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        app:cardElevation="10dp"

        android:layout_height="200dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/preview_image"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:src="@drawable/avisos"
                android:layout_width="100dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/title_noticia"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:gravity="left"
                    android:layout_weight="30"
                    android:layout_gravity="right|bottom|end"
                    android:text="Titulo de la noticia"
                    android:textSize="12sp"
                    style="@style/MainTextStyleOption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/preview_text"
                    android:layout_weight="70"
                    android:layout_gravity="left"
                    android:text="Este seria el contenido de prueba"
                    android:textSize="12sp"
                    style="@style/MainTextStyleOption"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/complete_link"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:gravity="right"
                    android:layout_weight="30"
                    android:layout_gravity="right|bottom|end"
                    android:text="Leer completo"
                    android:textSize="12sp"
                    style="@style/MainTextStyleOption"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />


            </LinearLayout>



        </LinearLayout>


    </android.support.v7.widget.CardView>





</LinearLayout>