<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:src="@drawable/ic_arrow_back_white_36dp"
            android:id="@+id/back_arrow_button"
            android:layout_margin="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />


        <ImageView
            android:tint="@color/colorWhite"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_home_black_24dp"
            android:id="@+id/home_button"
            android:layout_margin="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />


        <TextView
            android:layout_toRightOf="@id/back_arrow_button"
            android:layout_toLeftOf="@id/home_button"
            android:textColor="@color/colorWhite"
            android:background="@color/color_spash"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="0dp"
            android:gravity="center"
            android:text="Noticia completa"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>



    <TextView
        android:id="@+id/title_noticia"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_gravity="right|bottom|end"
        android:text="Titulo de la noticia"
        android:textSize="16sp"
        style="@style/MainTextStyleOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/preview_image"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:src="@drawable/avisos"
        android:layout_width="match_parent"
        android:layout_height="200dp" />



    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/preview_text"
            android:layout_weight="70"
            android:layout_gravity="left"
            android:text="Este seria el contenido de prueba"
            android:textSize="12sp"
            style="@style/MainTextStyleOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </ScrollView>











</LinearLayout>
