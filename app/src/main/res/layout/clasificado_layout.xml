<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/categoria_card_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:cardElevation="7dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/clasificado_title"
                android:padding="3dp"
                android:layout_gravity="center_horizontal"
                android:text="Nombre de la categoria"
                android:lines="2"
                android:textSize="16sp"
                style="@style/MainTextStyleOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/clasificado_contenido"
                android:padding="5dp"
                android:textSize="14sp"
                android:gravity="left"
                android:text="Nombre de la categoria"
                android:lines="2"
                style="@style/MainTextStyleOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/categoria_clasificado"
                android:padding="3dp"
                android:layout_gravity="right"
                android:text="Nombre de la categoria"
                android:lines="2"
                android:textSize="12sp"
                style="@style/MainTextStyleOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>