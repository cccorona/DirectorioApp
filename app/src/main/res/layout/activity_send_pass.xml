<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/root_view"
    android:orientation="vertical"
    tools:context="mx.com.cesarcorona.directorio.activities.SendPassActivity">




    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:shadowRadius="4"
            android:shadowDy="4.0"
            android:shadowDx="4.0"
            android:shadowColor="#000"
            android:text="Recuperar contraseÃ±a"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"
            android:gravity="end|bottom"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:paddingRight="20dp"
            android:layout_height="wrap_content" />



    </RelativeLayout>





    <LinearLayout
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:singleLine="true"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:id="@+id/correo_field"
            android:textColor="#303030"
            android:alpha="0.8"
            android:paddingRight="15dp"
            android:drawableRight="@drawable/ic_email_black_24dp"
            android:paddingLeft="10dp"
            android:drawableTint="#606060"
            android:hint="Correo electronico"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/white_rounded"
            android:layout_width="match_parent"
            android:layout_height="48dp" />



        <Button
            android:id="@+id/enviar_button"
            android:alpha="0.8"
            android:textColor="#FFF"
            android:text="Enviar"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

















    </LinearLayout>






</LinearLayout>

