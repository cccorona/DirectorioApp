<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/root_view"
    android:orientation="vertical"
    tools:context="mx.com.cesarcorona.directorio.activities.SendPassActivity">



    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:src="@drawable/ic_arrow_back_white_36dp"
            android:id="@+id/back_arrow_button"
            android:layout_margin="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />


        <ImageView
            android:tint="@color/colorWhite"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_home_black_24dp"
            android:id="@+id/home_button"
            android:layout_margin="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />


        <TextView
            android:layout_toRightOf="@id/back_arrow_button"
            android:layout_toLeftOf="@id/home_button"
            android:textColor="@color/colorWhite"
            android:background="@color/color_spash"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="0dp"
            android:gravity="center"
            android:text="Recupera tu contraseÃ±a"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>





    <LinearLayout
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:singleLine="true"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:id="@+id/correo_field"
            android:textColor="#303030"
            android:alpha="0.8"
            android:paddingRight="15dp"
            android:drawableRight="@drawable/ic_email_black_24dp"
            android:paddingLeft="10dp"
            android:drawableTint="#606060"
            android:hint="Correo electronico"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/white_rounded"
            android:layout_width="match_parent"
            android:layout_height="48dp" />



        <Button
            android:id="@+id/enviar_button"
            android:alpha="0.8"
            android:textColor="#FFF"
            android:text="Enviar"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

















    </LinearLayout>






</LinearLayout>

